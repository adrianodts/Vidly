@using System.Activities.Statements
@model Vidly.ViewModels.MovieViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var className = (@Model.Customers != null && @Model.Customers.Count > 1 ? "popular" : null);
}



@*<h2>@Model.Name</h2>*@

<h2 class="@className">@Model.Movie.Name</h2>


@if (@Model.Customers == null || @Model.Customers.Count == 0)
{
    <text>No one has rented this movie until now.</text>
}
else
{
    <ul>
        @foreach (var customer in @Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
